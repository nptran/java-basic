import java.util.Scanner;

public class Test3 {

	private static Scanner scanner = new Scanner(System.in);
	public static void main(String[] args) {
		System.out.println("Enter n: ");
		int n = scanner.nextInt();
		int c = 3;
		
		for(int i = 1; i <= n; i++) {
			if (i == 1 || i ==5) {
				for (int j = 1; j<=n ; j++) {
					System.out.print("* ");
				}
				System.out.println();
			}
			else {
				for (int b=1; b<=3; b++) {
					System.out.print("* ");
					for(int a=1; a<=n-c; a++) {
						System.out.print(" ");
					}
					c--;
				}
				System.out.println();
			}
		}
		
	}
	
	
}
