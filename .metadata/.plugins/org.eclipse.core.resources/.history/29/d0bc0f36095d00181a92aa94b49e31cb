import java.util.Scanner;

import com.sun.java_cup.internal.runtime.Symbol;

public class Test3 {

	private static Scanner scanner = new Scanner(System.in);
	public static void main(String[] args) {
		System.out.println("Enter n: ");
		int n = scanner.nextInt();
		int c = 3;
		
		for(int i = 1; i <= n; i++) {
			if (i == 1 || i ==n) {
				for (int j = 1; j<=n ; j++) {
					System.out.print("* ");
				}
				System.out.println();
			}
			else {
				if (i == 1 || i ==n) {
					System.out.println("*");
				}
				for(int a=n-3; a<n; a--) {
					System.out.println(" ");
					if(a == 0){
						System.out.println("*");
					}
				}
				System.out.println();
			}
		}
	}
}
