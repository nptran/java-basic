/**
 * 
 */
package com.mystudent.controller;

import javax.validation.Valid;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;

import com.mystudent.model.Major;
import com.mystudent.service.MajorService;

/**
 * @author Phuc Tran
 *
 */

@Controller
public class MajorController {

	@Autowired
	private MajorService service;
	
	@PostMapping("/student/save")
	public String save(@Valid Major major, BindingResult result, RedirectAttributes redirect) {
		if (result.hasErrors()) {
			return "form";
		}
		service.save(major);
		redirect.addFlashAttribute("success", "Saved student successfully!");
		return "redirect:/student";
	}
	
}
