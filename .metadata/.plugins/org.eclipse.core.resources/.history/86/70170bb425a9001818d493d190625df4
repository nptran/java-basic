package baitapso1;

import java.util.Scanner;

public class Bai18 {
	
	private static final int MAX = 50;
	
	private static Scanner scanner = new Scanner(System.in);
	
	private static int[] inputArray(int size) {
		 int[] arr = new int[size];
		System.out.println("Nhập mảng (gồm các số có 3 chữ số)");
		
		for (int i=0; i<size; i++) {
			arr[i] = scanner.nextInt();
		}
		return arr;
	}
	
	private static int inputN() {
		int n;
		do {
			System.out.print("Nhập n (không quá 50):  ");
			n = scanner.nextInt();
		} while (n >MAX);
		return n;
	}
	
	private static boolean reversibleArray(int size, int[] arr) {
		for (int i=0; i<size; i++) {
			if (arr[i] != arr[size-i-1])
				return false;
		}
		return true;
	}
	
	private static void output(int n, int[] arr) {
		System.out.print("KẾT LUẬN: ");
		if (reversibleArray(n, arr)) {
			System.out.println("Mảng đối xứng");
		}
		else System.out.println("Mảng không đối xứng");
	}
	
	public static void main(String[] args) {
		int n = inputN();;
		int[] a = inputArray(n);
		
		output(n, a);
	}
}
