	@SuppressWarnings("resource")
	public void Clear() throws IOException {
		
		Writer clear = null;	
		clear = new FileWriter("C://Users//Admin//Desktop//student-details.txt");
		clear.write("");
		
	}
	
	public void OStudent () throws IOException {
		Reader reader = null;
		
		try {
			reader = new FileReader("C://Users//Admin//Desktop//student-details.txt");
			int data = reader.read(); 
			while(data != -1) {
				char dataChar = (char) data;
				data = reader.read();
				System.out.print(dataChar);
			}
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		finally {
			reader.close();
			System.out.println("");
		}
	}
	

}
