package com.java.lesson2;
import java.util.Scanner;

public class Ex3 {
		
	public static int n = 100;
	
	public static void getValues(int a[]){
		
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter values:");
			for(int i= 0; i<= n; i++){
				
				a[i] = sc.nextInt();
		
			}
		sc.close();			
	}
	
	public static void findMax(int a[]){
		
		
		int Max1=0;
		
	//	getValues(a);
		for(int i = 0; i < n; i++){
			for(int j = 0; j < n; j++){
				Max1 = a[i];
					if(a[i] < a[j])
						{Max1 = a[j];}
			}
			
		}
	
		System.out.println("Max value is:" + Max1);
	
	}

}
