package com.mystudent.repository;

import java.util.List;

import javax.persistence.NamedNativeQuery;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;
import org.springframework.data.repository.query.Param;

import com.mystudent.model.Student;

public interface StudentRepository extends CrudRepository<Student, Integer> {

    List<Student> findByNameContaining(String q);
    
    @Query(value="INSERT INTO student s VALUES (s.id,s.name,s.dob,s.major_id)", nativeQuery=true)
    void create(@Param("s") Student student);

}