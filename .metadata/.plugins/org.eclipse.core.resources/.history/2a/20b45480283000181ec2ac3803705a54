package com.java.lesson2;
import java.util.Scanner;

public class Ex3 {
	
	public static void display(int[] arr, int n) {
		
		Scanner sc = new Scanner(System.in);
		for(int counter=0;counter<n;counter++) {
				arr[counter] = sc.nextInt();
		}
		sc.close();	
		System.out.println("Your values are:");
		for(int x:arr)
			System.out.print(x + "\t");
	}
	
	public static void findMax(int[] arr, int n) {
		
		System.out.println("\n==========================");
		int Max1 = arr[0];
		int Max2 = arr[1];
		
		for(int i = 1; i < n; i++) {			
			if(Max1 < arr[i])
				Max1 = arr[i];
		}
		
		for(int j = 0; j < n; j++) {			
			if(Max2 < arr[j] && arr[j] != Max1)
				Max2 = arr[j];
		}
		
		System.out.println("\n1st Max value is: " + Max1);
		System.out.println("2nd Max value is: " + Max2);
	}

	public static void findMin(int[] arr, int n) {
		
		System.out.println("\n==========================");
		int Min1 = arr[0];
		int Min2 = arr[1];
		
		for(int i=1; i<n; i++){
			if(Min1 > arr[i])
				Min1 = arr[i];
		}
		
		for(int j=0; j<n; j++){
			if(Min2 > arr[j] && arr[j] != Min1)
				Min2 = arr[j];
		}
		System.out.println("\n1st Min values is: " + Min1);
		System.out.println("2nd Min values is: " + Min2);
		
	}

	public static void checkEven(int[] arr, int n) {
		
		System.out.println("\n==========================");
		System.out.println("Even numbers are: ");
		for(int i=0; i<n; i++) {
			if(arr[i]%2==0)
				System.out.println(arr[i] + "\t");
		}
			
	}
}