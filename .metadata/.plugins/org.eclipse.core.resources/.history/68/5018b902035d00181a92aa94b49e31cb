import java.util.Scanner;

public class Test3 {

	private static Scanner scanner = new Scanner(System.in);
	public static void main(String[] args) {
		System.out.println("Enter n: ");
		int n = scanner.nextInt();
		
		for(int i = 1; i <= n; i++) {
			for (int j = 1; j<=n ; j++) {
				if(i ==1 || i==n) {
					System.out.print("* ");
				}
			}
			System.out.println();
		}
		
	}
	
}
