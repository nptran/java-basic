package baitapso2.ex14;

import java.util.Scanner;

public class SoPhuc {
	
	float a; //phan thuc
	float b; //phan ao
	
	public SoPhuc() {
		a =0;
		b =0;
	}
	
	public SoPhuc(float thuc, float ao) {
		a = thuc;
		b = ao;
	}

	public void hien() {
		System.out.println(a+" + j"+b);
	}
	
	public void nhap() {
		Scanner scanner = new Scanner(System.in);
		String in = scanner.nextLine();
		int aPos = in.indexOf("[ +]"), bPos = in.indexOf("j");
		a = Integer.parseInt(in.substring(0, aPos));
		b = Float.parseFloat(in.substring(bPos+1));
		scanner.nextLine();
	}

}
